{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["testtask-app/tsconfig.json"]
    },
    "plugins": [
        "react",
        "only-warn"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}
